<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="@color/white" >

    <!-- Title Of Song -->

    <TextView
        android:id="@+id/r_callHistoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/r_callHistoryIcon"
        android:text="@string/app_name"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->

    <TextView
        android:id="@+id/r_callHistoryAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/r_callHistoryName"
        android:layout_marginTop="1dip"
        android:layout_toLeftOf="@+id/r_callHistoryTime"
        android:text="@string/app_name"
        android:textColor="#343434"
        android:textSize="12sp" />

    <!-- Rightend Duration -->

    <TextView
        android:id="@+id/r_callHistoryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/r_callHistoryAddress"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="@string/app_name"
        android:textColor="#343434"
        android:textSize="12sp" />

    <!-- Rightend Arrow -->

    <ImageView
        android:id="@+id/r_callHistoryIcon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/r_callHistoryName"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/r_callHistoryName"
        android:layout_marginRight="5dip"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar"
        android:contentDescription="@null" />

</RelativeLayout>